rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Community Posts: Publicly readable, but only logged-in users can create/update/delete their own.
    match /communityPosts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Journal Entries:
    match /journalEntries/{entryId} {
      // 1. Allow public read if the entry is marked as public.
      // 2. Allow a user to read their own entries (public or private).
      allow read: if resource.data.isPublic == true || isOwner(resource.data.userId);

      // Allow create only for authenticated users writing their own entries.
      allow create: if isOwner(request.resource.data.userId);

      // Allow users to update or delete their own entries.
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Users collection: Allow users to read their own document. Deny writes for now.
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; 
    }
  }
}
